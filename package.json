{
  "name": "clickpay-monorepo",
  "version": "1.0.0",
  "description": "ClickPay - Digital Wallet System",
  "private": true,
  "workspaces": [
    "apps/frontend",
    "apps/backend",
    "packages/shared-types"
  ],
  "scripts": {
  "dev": "concurrently \"npm run frontend:dev\" \"npm run backend:dev\"",
  "frontend:dev": "npm --prefix ./apps/frontend run dev",
  "backend:dev": "npm --prefix ./apps/backend run dev"
},
  "devDependencies": {
    "concurrently": "^8.2.0",
    "typescript": "^5"
  }
}